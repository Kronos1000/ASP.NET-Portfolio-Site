@model IEnumerable<PatrickWare.Models.Services>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BackgroundImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServicesTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServicesDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icon1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icon2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icon3)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BackgroundImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServicesTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServicesDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Icon1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Icon2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Icon3)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ServiceID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ServiceID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ServiceID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
