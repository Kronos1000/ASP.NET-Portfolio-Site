@model PatrickWare.Models.UserMessage

@{
    ViewData["Title"] = "Contact Us";
}

@* display success message when submitting form*@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!-- Load css file -->
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-cwWzZwOu09hv1ce4vSFCvInBHpJjx6wz6mTJ0Hs3g9QH8dyP+3bCK5zJ3GwMq1vyTxAts9fnr2HgG+qZmBj8g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        /* Make hyperlinks appear as plain text*/
        a {
            text-decoration: none;
            color: #000;
        }

        /* Send Message button */
        .btn-theme {
            display: block;
            width: 100%;
            margin: 0 auto;
            background-color: #7FA83F;
            color: #fff;
            text-align: center;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }
        /* Additional styles to align address and form */
        .contact-info-item {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: flex-start;
            text-align: left;
        }

        .contact-info-content {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: flex-start;
            text-align: left;
        }

        .contact-info-item .icon {
            margin-bottom: 10px;
        }
    </style>
</head>

<!-- Start Contact Area -->
<section class="contact-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <div class="contact-form">
                    <!-- Use the Html.BeginForm helper to create the form and bind it to the model -->
                    @using (Html.BeginForm("SendEmail", "Contact", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="section-title">
                                    <h2 class="title">Contact us</h2>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Name">Name:</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Email">Email:</label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Subject">Subject:</label>
                                    <input asp-for="Subject" class="form-control" />
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Message">Message:</label>
                                    <textarea asp-for="Message" class="form-control"></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group mb-0">
                                    <button type="submit" class="btn btn-theme">Send Message</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-5">
                <div class="contact-info-wrapper">

                    <div class="contact-info-content">
                        <div class="align-top">
                            <div class="contact-info-item">
                                <div class="icon">
                                    <i class="icon-location-pin icons"></i>
                                </div>
                                <br />
                                <br />

                                <div class="content">
                                <br />
                                    <h4>Email</h4>
                                    <p>  <a href="mailto:patrick.ware1998@outlook.com"> patrick.ware1998@outlook.com</a></p>

                                    <h4> Mobile</h4>
                                    <p><a href="tel:+642040149448"> 0204 014 9448</a></p>


                                    <h4> LinkedIn</h4>
                                    <p>  <a href="https://www.linkedin.com/in/patrick-ware-102a65282/?originalSubdomain=nz"> Contact me on LinkedIn</a></p>
                                        
                                       
                                    </>

                                    



                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
